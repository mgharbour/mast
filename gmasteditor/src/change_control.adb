package body Change_Control is

   System_Saved : Boolean := True;

   ------------------
   -- Changes_Made --
   ------------------
   procedure Changes_Made is
   begin
      System_Saved := False;
   end Changes_Made;

   -----------
   -- Saved --
   -----------
   procedure Saved is
   begin
      System_Saved := True;
   end Saved;

   -------------------
   -- Saved_Changes --
   -------------------

   function Saved_Changes return Boolean is
   begin
      return System_Saved;
   end Saved_Changes;

end Change_Control;
